  /* Optional: Makes the sample page fill the window. */

  h1{
    font-weight: 200;
  }

  html, body {



    height: 100%;
    width: 100%;

    margin: 0;
    padding: 0;
    font-size: 1rem;

    background-color: #052542;


    color: #f6f7fb;

    font-family: 'Century Gothic';

    -webkit-animation: fadein 2s; /* Safari, Chrome and Opera > 12.1 */
     -moz-animation: fadein 2s; /* Firefox < 16 */
      -ms-animation: fadein 2s; /* Internet Explorer */
       -o-animation: fadein 2s; /* Opera < 12.1 */
          animation: fadein 2s;
}


@keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

/* Firefox < 16 */
@-moz-keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

/* Safari, Chrome and Opera > 12.1 */
@-webkit-keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

/* Internet Explorer */
@-ms-keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

  #main{
    position: relative;
    top: 50%;
    transform: translateY(-50%);

        align-items: center;
        align-content: center;

  }

  #title{
    position: inherit;
    align-items: center;
    align-content: center;
    padding-bottom: 2rem;
    font-family: inherit;
    font-size: 40pt;
    color: #f6f7fb;

  }

  #mini{
    width: 10%;
    height: 10%;
    position: inherit;
    right: 4%;
    border: none;
    padding-top: 25px;
    padding-bottom: 25px;
    font-size: 1rem;

  }
  
  #mini button{
    width: 15rem;
    height: 4rem;

    align-items: center;
    align-content: center;

    margin-top: 2rem;
    margin-bottom: 2rem;

    display: block;
    border: none;

    font: inherit;
    color: #f6f7fb;

  }

  #mini, #yesButt:hover{
    background-color: #CC9787;

    -moz-transition: background-color 0.8s ease-in-out;
		-webkit-transition: background-color 0.8s ease-in-out;
		-ms-transition: background-color 0.8s ease-in-out;
  }


    #mini, #noButt:hover{
      background-color: #CC9787;

      -moz-transition: background-color 0.8s ease-in-out;
  		-webkit-transition: background-color 0.8s ease-in-out;
  		-ms-transition: background-color 0.8s ease-in-out;
    }

  #yesButt {
    font-family: inherit;
    font-size: 1rem;
    background-color: #3e6589;
    border-width: 5px;
    border-radius: 9px;
    border: none;
    padding-top: 25px;
    width: 18%;
    padding-bottom: 25px;
    margin-bottom: 15px;
    color: #f6f7fb;

  }

  #noButt{
    font-family: inherit;
    font-size: 1rem;
    background-color: #3e6589;
    border-width: 5px;
    border-radius: 9px;
    border: none;
    padding-top: 25px;
    width: 18%;
    padding-bottom: 25px;  
    color: #f6f7fb;

  }

  </style>
</head>
<body>

  <center id = 'main'>
    <h1 id = 'title'> Do you need a favor? </h1>
      <%= button_to "Yes please!", new_path, :id => "yesButt", :type => "button", :method => :get %>
      <%= button_to "Maybe later :)", gmap_path, :id => "noButt", :type => "button", :method => :get %>
