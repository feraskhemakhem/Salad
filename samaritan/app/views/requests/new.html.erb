  <!-- new form in rails -->
  <center>
    <div class="container">
      <%= form_for :request, url: requests_path do |f| %>
      <h3 id="request_favor">Request a Favor <3</h3>
      <fieldset>
        <%= f.text_field :name, placeholder: "NAME", class: "text_stuff", tabindex: "1" %>
      </fieldset>
      <fieldset>
        <%= f.text_field :phone, placeholder: "PHONE NUMBER", class: "text_stuff", tabindex: "3"%>
      </fieldset>
      <fieldset>
        <%= f.text_field :details, placeholder: "REQUEST (max 25 characters)", class: "text_stuff", id: "big_box", tabindex: "5"%>
      </fieldset>
      <fieldset>
        <%= f.submit :Submit, id: "contact_button" %>
      </fieldset>

      <% end %>
    </div>



